{
  "name": "hapi-openapi3",
  "version": "1.0.3-alpha.7",
  "description": "Generate OpenAPI 3.0.0 for Hapi",
  "files": [
    "dist/"
  ],
  "types": "dist/bundle.d.ts",
  "main": "dist/bundle.js",
  "author": "Louie Navarro",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/lueenavarro/hapi-openapi3.git"
  },
  "scripts": {
    "publish": "npm publish --access public",
    "prepare": "npm run build",
    "build": "webpack --mode production",
    "build:watch": "webpack --mode development --watch --devtool eval-source-map",
    "test": "ts-mocha src/**/*.spec.ts",
    "test:watch": "npm run test -- --watch",
    "coverage": "nyc --reporter=lcov npm run test"
  },
  "dependencies": {
    "joi": "^17.4.0",
    "statuses": "^2.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.21",
    "@types/expect": "^24.3.0",
    "@types/hapi": "^18.0.5",
    "@types/lodash": "^4.14.170",
    "@types/mocha": "^8.2.3",
    "@types/sinon": "^10.0.2",
    "@types/statuses": "^2.0.0",
    "chai": "^4.3.4",
    "dts-bundle-webpack": "^1.0.2",
    "mocha": "^9.0.2",
    "nyc": "^15.1.0",
    "sinon": "^11.1.1",
    "ts-loader": "^9.2.3",
    "ts-mocha": "^8.0.0",
    "typescript": "^4.3.5",
    "webpack": "^5.42.0",
    "webpack-cli": "^4.7.2",
    "webpack-node-externals": "^3.0.0"
  },
  "nyc": {
    "include": "src",
    "exclude": "src/**/*.spec.ts"
  }
}
